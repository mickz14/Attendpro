        try {
          const response = await fetch('/getExistingLectures');
          const lectures = await response.json();
          // console.log("Lectures:", lectures);
          
          const existingLecturesDiv = document.getElementById('existing_lectures_div');
          existingLecturesDiv.innerHTML = '';  // Clear existing labels
          
          lectures.forEach(lecture => {
            // Remove the label when the button is clicked
            const labell = document.createElement('label');
            labell.className = 'lecture_label';
            // label.for = 
            labell.textContent = `${lecture.SECTION_NAME}-${lecture.SUB_ALIAS}`;
            // existingLecturesDiv.appendChild(label);
            const btnn = document.createElement('button');
            btnn.className = 'lecture_label_button';
            btnn.textContent = `x`;
            // existingLecturesDiv.appendChild(btnn);
            
            // Append the label and button to the container
            const lect_div = document.createElement('div');
            lect_div.className = 'lect_div_class';
            lect_div.appendChild(labell);
